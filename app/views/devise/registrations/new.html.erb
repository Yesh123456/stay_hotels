<div class="flex min-h-full flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <h2 class="mt-6 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Sign up</h2>
  </div>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-[480px]">
    <div class="bg-white px-6 py-12 shadow sm:rounded-lg sm:px-12">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div>
          <%= f.label :email, class:"block text-sm font-medium leading-6 text-slate-900 pb-3" %>
          <%= f.email_field :email, autofocus: true, class:"block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-green-600 sm:text-sm sm:leading-6", autocomplete: "email", required: true %>
        </div>

        <div>
          <%= f.label :password , class:"block text-sm font-medium leading-6 text-slate-900 pb-3 pt-3"%>
          <%= f.password_field :password, class:"block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-green-600 sm:text-sm sm:leading-6",autocomplete: "new-password", required: true %>
        </div>

        <div>
          <%= f.label :password_confirmation , class:"block text-sm font-medium leading-6 text-slate-900 pb-3 pt-3" %>
          <%= f.password_field :password_confirmation, class:"block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-green-600 sm:text-sm sm:leading-6",autocomplete: "new-password", required: true %>
        </div>

        <div class="pt-6">
          <%= f.submit "Sign up", class:"flex w-full justify-center rounded-md bg-violet-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-violet-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-violet-600" %>
        </div>
      <% end %>

    </div>

    <p class="mt-10 text-center text-sm text-gray-500">
      Already member?
      <%= link_to "Login", new_session_path(resource_name), class:"font-semibold leading-6 text-orange-600 hover:text-orange-500" %><br />
    </p>
  </div>
</div>