<div class="container mx-auto px4 py-8">
  <div class="w-full px-4">
    <div class="max-w-10-xl mx-auto p-4 bg-white shadow-lg rounded-lg">
      <h2 class="text-2xl font-bold mb-4">Amenities and Facilities of <%= properties.name %></h2>
      
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
        <!-- Languages Spoken -->
        <div>
          <h3 class="font-bold mb-2">Languages spoken</h3>
          <div class="flex items-center space-x-2">
            <img src="https://flagcdn.com/w40/gb.png" alt="English" class="w-6 h-4">
            <span>English</span>
          </div>
          <div class="flex items-center space-x-2">
            <img src="https://flagcdn.com/w40/in.png" alt="Hindi" class="w-6 h-4">
            <span>Hindi</span>
          </div>
        </div>

        <!-- Internet Access -->
        <div>
          <h3 class="font-bold mb-2">Internet access</h3>
          <p>✅ Free Wi-Fi in all rooms!</p>
          <p>✅ Internet</p>
          <p>✅ Internet services</p>
        </div>

        <!-- Services and Conveniences -->
        <div>
          <h3 class="font-bold mb-2">Services and conveniences</h3>
          <p>✅ Daily housekeeping</p>
          <p class="text-gray-400 line-through">❌ Elevator</p>
          <p class="text-gray-400 line-through">❌ Smoking area</p>
        </div>

        <!-- Access -->
        <div>
          <h3 class="font-bold mb-2">Access</h3>
          <p>✅ Check-in/out [private]</p>
          <p>✅ Check-in [24-hour]</p>
          <p>✅ <a href="#" class="text-blue-500">Front desk [24-hour]</a></p>
          <p class="text-gray-400 line-through">❌ Pets allowed</p>
        </div>

        <!-- Getting Around -->
        <div>
          <h3 class="font-bold mb-2">Getting around</h3>
          <p>✅ Car park [on-site]</p>
        </div>
      </div>

    </div>
   </div> 
</div>  